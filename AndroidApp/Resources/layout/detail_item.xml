<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1,2,3"
    tools:ignore="RtlCompat,HardcodedText,HardcodedSize,HardcodedColor">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        tools:ignore="UselessParent">
        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/column_asset_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:gravity="center"/>
        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/column_expected_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:gravity="center"/>
        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/column_physical_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:gravity="center"/>
        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/column_gap_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:gravity="center"/>
    </TableRow>
</TableLayout>