<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="16dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="16dp"
    android:layout_height="wrap_content"
    tools:ignore="RtlCompat,ContentDescription,HardcodedText,HardcodedSize,HardcodedColor"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/constraintLayout">
        <TextView
            android:id="@+id/tv_lb_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number"
            android:textColor="#091020"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.1"
            android:textSize="18dp"/>
          <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#091020"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@id/tv_lb_number"
            app:layout_constraintTop_toBottomOf="@id/tv_lb_number"
            app:layout_constraintRight_toRightOf="@id/tv_lb_number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/tv_asset_name_choose_options"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Asset Name"
            android:textColor="#F06941"
            app:layout_constraintLeft_toRightOf="@id/tv_lb_number"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="24dp"/>

         <EditText
            android:id="@+id/edit_text_quality"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="0"
            android:inputType="numberDecimal"
            app:layout_constraintLeft_toRightOf="@id/tv_asset_name_choose_options"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/abc_action_bar_item_background_material"/>
         <ImageView
            android:id="@+id/img_btn_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_format_list_bulleted_24"
            app:layout_constraintLeft_toRightOf="@id/edit_text_quality"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
